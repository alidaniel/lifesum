<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape>
            <gradient
                android:centerX="0.5"
                android:centerY="0.3"
                android:endColor="#cec7c0"
                android:gradientRadius="300dp"
                android:startColor="#f1eeeb"
                android:type="radial"/>
        </shape>
    </item>

    <item>
        <scale
            android:scaleHeight="100%"
            android:scaleWidth="100%"
            android:scaleGravity="center"
            android:drawable="@drawable/peas"/>
    </item>

    <item
        android:width="68dp"
        android:height="68dp"
        android:drawable="@drawable/orange"
        android:left="350dp"
        android:top="400dp"/>

    <item
        android:width="128dp"
        android:height="128dp"
        android:drawable="@drawable/orange"
        android:left="-20dp"
        android:top="480dp"/>


</layer-list>
